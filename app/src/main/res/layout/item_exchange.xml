<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/exchange_list_item_shape">

    <TextView
        android:id="@+id/txtExchangeName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="ADEL"
        android:textColor="@color/textColorPri"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgExchangeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtExchangeName"
        android:layout_marginRight="25dp"
        android:layout_toEndOf="@id/txtExchangeName"
        android:layout_toRightOf="@id/txtExchangeName" />

    <TextView
        android:id="@+id/txtExchangeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imgExchangeStatus"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@id/imgExchangeStatus"
        android:layout_toRightOf="@id/imgExchangeStatus"
        android:text="11,95"
        android:textColor="@color/textColorPri"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtExchangePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="% 1,3"
        android:textSize="20dp" />
</RelativeLayout>