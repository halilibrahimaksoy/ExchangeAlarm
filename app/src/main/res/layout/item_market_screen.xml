<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/exchange_list_item_shape"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/txtExchangeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="ADEL"
        android:textColor="@color/textColorPri"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgExchangeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtExchangeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="11,95"
        android:textColor="@color/textColorPri"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtExchangeYesterValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="11,95"
        android:textColor="@color/textColorPri"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtExchangePercentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="% 1,3"
        android:textSize="20dp" />
</LinearLayout>